{
    "name": "Soulcode Browser Utils",
    "version": "0.0.2",
    "description": "Soulcode Browser Utils, to improve UX on Bexio",
    "manifest_version": 3,
    "author": "Fabian Gander",
    "action": {
        "default_popupDISABLED": "index.html",
        "default_title": "Soulcode Browser Utils"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "webNavigation"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://office.bexio.com/index.php/monitoring/edit"
            ],
            "js": [
                "bexioAddTime.js"
            ]
        }
    ]
}