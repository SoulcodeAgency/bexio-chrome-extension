{
    "name": "Soulcode Browser Utils",
    "version": "0.1.0",
    "description": "Soulcode Browser Utils, to improve UX on Bexio",
    "manifest_version": 3,
    "author": "Fabian Gander",
    "action": {
        "default_title": "Soulcode Browser Utils"
    },
    "permissions": [
        "scripting",
        "storage"
    ],
    "content_scripts": [
